<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane minHeight="400.0" minWidth="600.0"
	style="-fx-background-color: black;"
	xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="il.ac.haifa.cs.sweng.cms.SuccessfulPurchaseController">
	<children>
		<BorderPane layoutY="20.0" AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<center>
				<VBox fx:id="successfulVBox" alignment="TOP_CENTER"
					spacing="15.0">
					<children>
						<Text fill="ORANGE" strokeType="OUTSIDE" strokeWidth="0.0"
							text="Your purchase have made successfully">
							<font>
								<Font name="System Bold Italic" size="26.0" />
							</font>
						</Text>
						<HBox alignment="CENTER">
							<children>
								<Label text="Purchase ID:" textFill="WHITE">
									<font>
										<Font size="15.0" />
									</font>
								</Label>
								<Text fx:id="PurchaseIDOverview" fill="WHITE"
									strokeType="OUTSIDE" strokeWidth="0.0"
									wrappingWidth="104.47088813781738">
									<font>
										<Font size="15.0" />
									</font>
								</Text>
							</children>
						</HBox>
					</children>
				</VBox>
			</center>
			<top>
				<AnchorPane fx:id="TopMenu"
					style="-fx-border-color: orange;" BorderPane.alignment="CENTER">
					<children>
						<Button mnemonicParsing="false"
							onAction="#handheldsBackButton" prefHeight="25.0"
							prefWidth="61.0"
							style="-fx-background-color: ORANGE; -fx-background-radius: 10;"
							text="back" textAlignment="CENTER" AnchorPane.bottomAnchor="5.0"
							AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
							<font>
								<Font name="System Bold" size="12.0" />
							</font>
							<cursor>
								<Cursor fx:constant="HAND" />
							</cursor>
						</Button>
					</children>
				</AnchorPane>
			</top>
			<bottom>
				<VBox alignment="CENTER">
					<children>
						<Button minWidth="100.0" mnemonicParsing="false"
							onAction="#handheldsBackToMovieList"
							style="-fx-background-color: ORANGE; -fx-background-radius: 10;"
							text="OK" textAlignment="CENTER">
							<font>
								<Font name="System Bold" size="12.0" />
							</font>
							<cursor>
								<Cursor fx:constant="HAND" />
							</cursor>
							<VBox.margin>
								<Insets bottom="10.0" top="10.0" />
							</VBox.margin>
						</Button>
					</children>
				</VBox>
			</bottom>
		</BorderPane>
	</children>
</AnchorPane>
